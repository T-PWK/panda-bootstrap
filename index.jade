extends layout

block content
    each post in posts
        .blog-post(itemscope, itemtype="http://schema.org/BlogPosting")
            h2.blog-post-title(itemprop="name", title=post.title): a(href= $url(post), itemprop="url")= post.title
            p.blog-post-meta 
                time(datetime=$date(post), itemprop="datePublished")= $date(post, 'MMMM DD, YYYY')
                |  by  
                a(href="#")= post.author.name

            section(itemprop="description")= post.teaser
    .row.pager
        .col-md-4
            if pagination.newer
                a(href=$pageUrl(true)) 
                    i.fa.fa-angle-double-left
                    |  Newer
        .col-md-4.text-center Page #{pagination.page} of #{pagination.pages}
        .col-md-4
            if pagination.older
                a.pull-right(href=$pageUrl(false))
                    | Older 
                    i.fa.fa-angle-double-right
